% My fig Environment
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\define@key{myFig}{width}{\def\width{#1\textwidth}}
\define@key{myFig}{file}{\def\file{#1}}

\newenvironment{fig}[2][H]
{
  % Default Values:
  \def\width{.5\textwidth}
  \def\file{}
  
  \setkeys{myFig}{#2}
  
  \begin{figure}[#1]
    \ifx\file\@empty
    \else
      \centering
      \includegraphics[width=\width]{pictures/\file}
  \fi
}
{
  \end{figure}
  \vspace{-.5cm}
}

